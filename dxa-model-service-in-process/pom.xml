        <dependency>
            <groupId>com.sdl.delivery</groupId>
            <artifactId>udp-api-broker</artifactId>
            <version>${api.version}</version>
        </dependency>
        <dependency>
            <groupId>com.sdl.delivery</groupId>
            <artifactId>udp-api-linking</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sdl.delivery</groupId>
